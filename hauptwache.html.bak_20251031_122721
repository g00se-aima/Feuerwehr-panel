<script>
document.addEventListener('DOMContentLoaded', function() {
	if (typeof setupGlobalSearch === 'function') setupGlobalSearch();
	// Render only vehicles whose title starts with '1 '
	console.log('window.VEHICLE_LIST:', window.VEHICLE_LIST);
	if (typeof window.renderVehicleButtons === 'function') {
		const container = document.getElementById('vehicle-btns');
		if (container) {
			container.innerHTML = '';
			window.renderVehicleButtons(container);
		}
	} else {
		console.warn('renderVehicleButtons not available');
	}
	if (typeof window.renderVehicleEditButton === 'function') {
		window.renderVehicleEditButton(
			document.getElementById('vehicle-edit-btn'),
			document.getElementById('vehicle-btns')
		);
		// Change edit button text
		const editBtn = document.querySelector('.vehicleedit-btn');
		if (editBtn) editBtn.textContent = 'Fahrzeuge Bearbeiten';
	}
});
</script>
